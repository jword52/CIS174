@model Ticket

<h2>New Task</h2>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Name: <span asp-validation-for="Name" class="text-danger"></span></label>
        <input asp-for="Name" class="form-control" />
        
    </div>
    <div class="form-group">
        <label asp-for="Description">Description: <span asp-validation-for="Description" class="text-danger"></span></label>
        <input asp-for="Description" class="form-control" />
        
    </div>
    <div class="form-group">
        <label asp-for="SprintId">Sprint: <span asp-validation-for="SprintId" class="text-danger"></span></label>
        <select asp-for="SprintId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Sprints, "SprintId", "Name"))">
            <option value="0"></option>
        </select>
        
    </div>
    <div class="form-group">
        <label asp-for="Points">Points: <span asp-validation-for="Points" class="text-danger"></span></label>
        <select asp-for="Points" class="form-control"
                asp-items="@(new SelectList(ViewBag.Points))">
            <option value="0"></option>
        </select>
        
    </div>
    <div class="form-group">
        <label asp-for="StatusId">Status: <span asp-validation-for="StatusId" class="text-danger"></span></label>
        <select asp-for="StatusId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Statuses, "StatusId", "Name"))">
            <option value=""></option>
        </select>
        
    </div>

    <button type="submit" class="btn-primary btn">Add</button>
    <a asp-action="Index" class="btn btn-primary">Cancel</a>
</form>