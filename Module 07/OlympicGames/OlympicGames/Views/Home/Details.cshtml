@model CountryViewModel
@{
    ViewData["Title"] = "Country Details";
}

<h2 class="text-center">Country Details</h2>

<html>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <ul class="list-group text-center">
            <li class="list-group-item">
                <img src="~/images/@Model.Country.FlagImg" alt="" />
                <h3>@Model.Country.CountryName</h3>
            </li>
            <li class="list-group-item">
                <h4>Game: @Model.Country.Game.GameName</h4>
            </li>
            <li class="list-group-item">
                <h4>Sport: @Model.Country.Sport.SportName</h4>
            </li>
            <li class="list-group-item">
                <h4>Location: @Model.Country.Location.LocationName</h4>
            </li>
            <li class="list-group-item">
                <form asp-action="Add" method="post">
                <a asp-action="Index" class="btn btn-primary"
                asp-route-game="@Model.ActiveGame"
                asp-route-sport="@Model.ActiveSport"
                asp-route-type="@Model.ActiveLocation">
                Return to Home page
            </a>
            <button type="submit" class="btn btn-primary">
                Add to Favorites
            </button>
            <input type="hidden" asp-for="Country.CountryID" />
                </form>
            </li>
        </ul>
    </div>
</div>
</html>