@model CountryListViewModel
@{
    ViewData["Title"] = "Olympic Games";
}

<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Game</h3>
        <div class="list-group">
            @foreach (Game game in Model.Games)
            {
                    <a asp-action="Index"
               asp-route-activeGame="@game.GameID"
               asp-route-activeSport="@Model.ActiveSport"
               asp-route-activeLocation="@Model.ActiveLocation"
               class="list-group-item @Model.CheckActiveGame(game.GameID)">
                    @game.GameName
                    </a>
            }
        </div>
        <h3 class="mt-3">Sport</h3>
        <div class="list-group">
            @foreach (Sport sport in Model.Sports)
            {
                    <a asp-action="Index"
               asp-route-activeConf="@Model.ActiveGame"
               asp-route-activeDiv="@sport.SportID"
               asp-route-activeConf="@Model.ActiveLocation"
               class="list-group-item @Model.CheckActiveSport(sport.SportID)">
                    @sport.SportName
                    </a>
            }
        </div>
        <h3 class="mt-3">Location</h3>
        <div class="list-group">
            @foreach (Location location in Model.Locations)
            {
                    <a asp-action="Index"
               asp-route-activeConf="@Model.ActiveGame"
               asp-route-activeDiv="@location.LocationID"
               asp-route-activeConf="@Model.ActiveSport"
               class="list-group-item @Model.CheckActiveLocation(location.LocationID)">
                    @location.LocationName
                    </a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Country country in Model.Countries)
            {
                    <li class="list-inline-item">
                        <a asp-action="Details" asp-route-id="@country.CountryID">
                            <img src="~/images/@country.FlagImg" alt="@country.CountryName"
                         title="@country.CountryName | @country.Game.GameName
                                                     @country.Sport.SportName" />
                        </a>
                    </li>
            }
        </ul>
    </div>
</div>
