@model Review
@{
    ViewBag.Title = "Delete Review";
}

<h2>Delete Review?</h2>
<p style="color:red;">Are you sure you want to delete your review?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ReviewId" />

    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Review" asp-action="View" asp-route-id="@Model.ReviewId" class="btn btn-primary">Cancel</a>
</form>