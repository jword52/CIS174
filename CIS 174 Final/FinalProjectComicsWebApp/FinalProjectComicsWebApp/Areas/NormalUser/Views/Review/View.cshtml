@model Review
@{
    ViewData["Title"] = "View Review";
}

<h2>View Review</h2>

<table class="table table-boardered table-striped">
    <thead>
        <tr>
            <th>Review Id</th>
            <th>Game</th>
            <th>User</th>
            <th>Rating</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.ReviewId</td>
            <td>@Model.Comic.Title</td>
            <td>@Model.User.UserName</td>
            <td>@Model.Rating</td>
        </tr>
        <tr>
            <td>@Model.ReviewContent</td>
        </tr>
    </tbody>
</table>
@if (CurrentUser.Current.UserId == Model.UserId)
{
    <a asp-action="Edit" asp-route-id="@Model.ReviewId" class="btn btn-outline-primary">Edit Your Review</a>
    <a asp-action="Delete" asp-route-id="@Model.ReviewId" class="btn btn-outline-primary">Delete Your Review</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Return to Home</a>
}
