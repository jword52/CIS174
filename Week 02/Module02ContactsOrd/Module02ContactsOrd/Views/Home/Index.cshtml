@using Module02ContactsOrd.Models
@model List<Contact>
@{
    ViewBag.Title = "My Phone";
}
<h2>Contact List</h2>

<a asp-controller="Contact" asp-action="Add">Add New Contact</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Relation</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.Name</td>
                <td>@contact.PhoneNum</td>
                <td>@contact.ContactFriend.CName</td>
                <td>
                    <a asp-controller="Contact" asp-action="Edit"
                   asp-route-id="@contact.ContactId"
                   asp-route-slug="@contact.Slug">Edit</a>
                   <a asp-controller="Contact" asp-action="Delete"
                   asp-routeid="@contact.ContactId"
                   asp-route-slug="@contact.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table> 