@using Module02ContactsOrd.Models
@model Contact
@{
    string title = ViewBag.Action + " Contact";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div> 

    <div class="form-group">
        <label asp-for="Name">Name</label> 
        <input asp-for="Name" class="form-control">
    </div> 

    <div class="form-group">
        <label asp-for="PhoneNum">Phone Number</label> 
        <input asp-for="PhoneNum" class="form-control">
    </div> 
    <div class="form-group">
        <label asp-for="FriendId">Relationship</label>
        <select asp-for="FriendId" class="form-control">
            <option value="">Select a relationship</option>
            @foreach (ContactFriend cf in ViewBag.ContactFriend)
            {
                <option value="@cf.FriendId">cf.CName</option>
            }
        </select>
    </div>


    <input type="hidden" asp-for="ContactId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index"
        class="btn btn-primary">Cancel</a>
</form>