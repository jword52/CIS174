@model List<Contact>
@{
    ViewBag.Title = "My Contacts";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Contact List</h2>

    <a asp-controller="Contact" asp-action="Add">Add New Contact</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Number</th>
                <th>Address</th>
                <th>Note</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.Name</td>
                    <td>@contact.Phone</td>
                    <td>@contact.Address</td>
                    <td>@contact.Note</td>
                    <td>
                        <a asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug">Edit</a>
                        <a asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>



                    