@{
    string controller =
        ViewContext.RouteData.Values["controller"].ToString();
    string action =
        ViewContext.RouteData.Values["action"].ToString();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Phone Contacts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" />

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper.js/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

</head>
<body>
   
    <header>
        <br />
        
        <nav class="navbar navbar-expand-md navbar-dark bg-primary fixed-top">
            <a class="navbar-brand" href="/">My Phone</a>
            <button class="navbar-toggler" type="button"
                    data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <nav class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav mr-auto">
                    @*<a class="nav-link
                        @(controller == "Home" && action == "Index" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">Home</a>*@
                    <a class="nav-link
                         @(controller == "Home" && action == "ContactUs" ? "active" : "")"
                       asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                    <a class="nav-link
                        @(controller == "Home" && action == "About" ? "active" : "")"
                       asp-controller="Home" asp-action="About">About Us</a>
                    <a class="nav-link
                        @(controller == "Home" && action == "Admin" ? "active" : "")"
                       asp-controller="Home" asp-action="Admin">Admin</a>
                   
                </div>
                <div class="navbar-nav navbar-right">
                    <a class="nav-link"
                       asp-area="Home" asp-controller="Home" asp-action="Index">My Contacts</a>
                       
                </div>
                <br />
                 <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="background-color: white"  role="button" aria-haspopup="true" aria-expanded="false">Assignments<span class="caret"></span></a>
    <ul class="dropdown-menu">
        
        
        <li><a href="@Url.Action("Index", "Assignment6", new { accessLevel = 1 })">Assignment 6.1</a></li>
    </ul>
            </nav>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <hr />
        <p>&copy; @DateTime.Now.Year - My Contacts</p>
    </footer>
</body>
</html>